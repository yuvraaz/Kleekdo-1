<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5.0dip">

    <com.app.elitesample.utils.CircleImageView
        android:id="@id/userImage"
        android:layout_width="45.0dip"
        android:layout_height="45.0dip" />

    <RelativeLayout
        android:id="@id/userChatWindow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/userImage"
        android:background="@drawable/chat_left"
        android:paddingLeft="20.0dip">

        <LinearLayout
            android:id="@id/chat_company_reply_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@id/message_text"
                style="@style/chat_text_message_style"
                android:layout_centerVertical="true"
                android:autoLink="web"
                android:maxWidth="280.0dip"
                android:text="Rahul Agrawal is a good boy but he does not know what he wants." />
        </LinearLayout>

        <TextView
            android:id="@id/time_text"
            style="@style/chat_timings"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8.0dip"
            android:text="17:10"
            android:textColor="@color/gray" />
    </RelativeLayout>
</RelativeLayout>